<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DiceRoller.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
            <Image
                x:Name="ImagemDado"
                Source="seis.jpeg"
                HeightRequest="185"
                Aspect="AspectFit"
                />

            <Picker
                x:Name="LadoPicker"
                Title="Escolha um lado:">
                <Picker.ItemsSource>
                    <x:Array Type="{x:Type x:String}">
                        <x:String>1</x:String>
                        <x:String>2</x:String>
                        <x:String>3</x:String>
                        <x:String>4</x:String>
                        <x:String>5</x:String>
                        <x:String>6</x:String>
                    </x:Array>
                </Picker.ItemsSource>
            </Picker>

            <Button
                x:Name="DadoButton"
                Text="Girar"
                Clicked="DadoButton_Clicked"/>

            <Label
                x:Name="ContadorTotal"
                Text="Total de vitórias: 0 ."/>

            <Label
                x:Name="ContadorSequencia"
                Text="Sequencia de acertos: 0 ."/>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
